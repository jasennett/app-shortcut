<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/icon_and_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/shortcut_icon"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_marginBottom="@dimen/content_spacing"
            android:src="@drawable/placeholder_icon"/>

        <TextView
            android:id="@+id/shortcut_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/status_icon"
        android:layout_width="@dimen/indicator_icon_size"
        android:layout_height="@dimen/indicator_icon_size"
        android:src="@drawable/ic_star_accent_24dp"
        android:layout_alignTop="@id/icon_and_label"
        android:layout_alignEnd="@id/icon_and_label"/>

</RelativeLayout>